{% extends 'base.html.twig' %}
{% block title %}Articles - Agent Environment{% endblock %}

{% block body %}
<section class="container">
    {% if content %}
        <table id="contentz" class="table table-striped">
            <thead>
                <tr>
                    <th>Article Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in content %}
                    <tr>
                        <td>{{ article.title }}</td>
                        <td>
                            <a href="/content/{{ article.id }}" class="btn btn-dark">Bekijk</a>
                            <a href="/content/edit/{{ article.id }}" class="btn btn-white">Bewerken</a>
                            <a href="#" class="btn btn-danger delete-article" data-id="{{ article.id }}">Verwijder</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</section>
{% endblock %}
{% block javascripts %}
    <script src="/js/article.js"></script>
{% endblock %}