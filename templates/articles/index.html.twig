{% extends 'base.html.twig' %}
{% block title %}Articles - Agent Environment{% endblock %}

{% block body %}
    {% if articles %}
        <table id="articles" class="table table-striped">
            <thead>
                <tr>
                    <th>Article Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.title }}</td>
                        <td>
                            <a href="/article/{{ article.id }}" class="btn btn-dark">Bekijk</a>
                            <a href="/article/edit/{{ article.id }}" class="btn btn-white">Bewerken</a>
                            <a href="#" class="btn btn-danger delete-article" data-id="{{ article.id }}">Verwijder</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
{% block javascripts %}
    <script src="/js/article.js"></script>
{% endblock %}